<?xml version="1.0" encoding="UTF-8"?>

<control>   
    <dsn>mysql:host=127.0.0.1;dbname=energydb;charset=UTF8</dsn>
    <userDB>root</userDB>
    <passwordDB>admin</passwordDB>
    
    <command name = "Default">   
        <classroot>Logout</classroot>                                                       
    </command>
                               
    <command name = "Login">  
        <status value = "CMD_OK">        
            <view>MainView</view>              
        </status>
        <status value = "CMD_ERROR">        
            <view>LoginView</view>              
        </status>
        <status value = "CMD_INSUFFICIENT_DATA">        
           <view>LoginView</view>           
        </status>                                         
    </command>
    
    <command name = "Logout">   
        <view>LoginView</view>                                                       
    </command>
    
</control>

   
 

